\newcommand{\greybox}[2]{
\setbeamercolor{uppergrn}{fg=blue,bg=dark}
\setbeamercolor{lowercol}{fg=lightdark,bg=grey}

\begin{beamerboxesrounded}[upper=uppergrn,lower=lowercol,shadow=true]{
#1 }  #2
\end{beamerboxesrounded} }

\newcommand{\bluebox}[2]{
\setbeamercolor{uppergrn}{fg=blue,bg=dark}
\setbeamercolor{lowercol}{fg=lightdark,bg=blue}

\begin{beamerboxesrounded}[upper=uppergrn,lower=lowercol,shadow=true]{
#1 }  #2
\end{beamerboxesrounded} }

\newcommand{\greenbox}[2]{
\setbeamercolor{uppergrn}{fg=blue,bg=dark}
\setbeamercolor{lowercol}{fg=lightdark,bg=green}

\begin{beamerboxesrounded}[upper=uppergrn,lower=lowercol,shadow=true]{
#1 }  #2
\end{beamerboxesrounded} }

